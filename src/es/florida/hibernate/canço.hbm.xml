<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="es.florida.hibernate">
	<class name="Canço" table="cançons">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="nom" type="string" column="nom"/>
		<property name="artista" type="string" column="artista"/>
		<property name="duraçio" type="string" column="duracio"/>
		<property name="any" type="int" column="any"/>
	</class>
</hibernate-mapping>