<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.hibernate.MiniProjecte">
	<class name="Llibre" table="titles">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="title" type="string" column="title" />
		<property name="author" type="int" column="author" />
		<property name="year" type="int" column="year" />
		<property name="editorial" type="int" column="editorial" />
		<property name="pages" type="int" column="pages" />
	</class>
</hibernate-mapping>